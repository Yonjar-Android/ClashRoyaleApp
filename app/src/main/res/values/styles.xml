<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tvStyleUser">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/inika_regular</item>
    </style>

    <style name="tvStyleDetail">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/inika_regular</item>
    </style>

    <style name="App.Theme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/clash_stats_logo</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.ClashRoyaleStats</item>
    </style>


</resources>